<?xml version="1.0" encoding="utf-8"?>
<openbox_menu xmlns="http://openbox.org/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://openbox.org/ file:///usr/share/openbox/menu.xsd">
    <menu id="root-menu" label="Openbox">
        <separator label="OBS" />
        <item label="Run">
            <action name="Execute">
                <execute>/usr/bin/obs</execute>
            </action>
        </item>
        <item label="Kill">
            <action name="Execute">
                <execute>pkill -f obs</execute>
            </action>
        </item> 
        <separator label="Tools" />
        <item label="Terminal">
            <action name="Execute">
                <execute>/usr/bin/x-terminal-emulator -e /bin/bash</execute>
            </action>
        </item>
        <item label="Htop">
            <action name="Execute">
                <execute>/usr/bin/x-terminal-emulator -e htop</execute>
            </action>
        </item>
    </menu>
</openbox_menu>
